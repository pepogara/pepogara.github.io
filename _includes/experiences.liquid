<div class="experiences">
  {% if site.experiences != blank %}
    {% assign experiences_size = site.experiences | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.jobs.scrollable and experiences_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign experiences = site.experiences | reverse %}
        {% if include.limit and page.jobs.limit %}
          {% assign experiences_limit = page.jobs.limit %}
        {% else %}
          {% assign experiences_limit = experiences_size %}
        {% endif %}
        {% for item in experiences limit: experiences_limit %}
          <tr>
            <th scope="row" class="experience-date">
              {% if item.start_date %}
                {{ item.start_date | date: '%b %Y' }}
                â€“
                {% if item.end_date %}
                  {{ item.end_date | date: '%b %Y' }}
                {% else %}
                  Present
                {% endif %}
              {% else %}
                {{ item.date | date: '%b %d, %Y' }}
              {% endif %}
            </th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="experiences-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No experiences so far...</p>
  {% endif %}
</div>
